@model ApplicationCore.Entities.Movie
    <div class="container mt-5">
        <!-- First Row -->
        <div class="row">
            <!-- First Column: Movie Poster -->
            <div class="col-md-4">
                <img src="movie-poster.jpg" class="img-fluid" alt="Movie Poster">
            </div>
            <!-- Second Column: Movie Details -->
            <div class="col-md-4">
                <h2>Movie Title</h2>
                <p><span class="badge badge-primary">Genre 1</span> <span class="badge badge-secondary">Genre 2</span></p>
                <p>Rating: <span class="badge badge-success">8.5</span></p>
                <p>Overview: Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque sit amet accumsan tortor.</p>
            </div>
            <!-- Third Column: Buttons -->
            <div class="col-md-4">
                <button class="btn btn-primary mb-2" data-toggle="modal" data-target="#buyMovieModal">Buy Movie</button>
                <button class="btn btn-secondary" data-toggle="modal" data-target="#reviewModal">Review</button>
            </div>
        </div>

        <!-- Second Row -->
        <div class="row mt-4">
            <!-- First Column: Movie Facts and Trailers -->
            <div class="col-md-6">
                <h3>Movie Facts</h3>
                <ul class="list-group mb-3">
                    <li class="list-group-item">Fact 1</li>
                    <li class="list-group-item">Fact 2</li>
                    <li class="list-group-item">Fact 3</li>
                </ul>
                <h3>Trailers</h3>
                <ul class="list-group">
                    <li class="list-group-item">Trailer 1</li>
                    <li class="list-group-item">Trailer 2</li>
                </ul>
            </div>
            <!-- Second Column: Casts -->
            <div class="col-md-6">
                <h3>Casts</h3>
                <ul class="list-group">
                    <li class="list-group-item"><a href="cast-details.html">Cast 1</a></li>
                    <li class="list-group-item"><a href="cast-details.html">Cast 2</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Buy Movie Modal -->
    <div class="modal fade" id="buyMovieModal" tabindex="-1" role="dialog" aria-labelledby="buyMovieModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="buyMovieModalLabel">Buy Movie</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Price: $19.99</p>
                    <button class="btn btn-success">Purchase</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Review Modal -->
    <div class="modal fade" id="reviewModal" tabindex="-1" role="dialog" aria-labelledby="reviewModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reviewModalLabel">Review</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <select class="form-control" id="rating">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="review">Review</label>
                        <textarea class="form-control" id="review" rows="3"></textarea>
                    </div>
                    <button class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>